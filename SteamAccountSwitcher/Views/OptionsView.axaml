<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SteamAccountSwitcher.Views.OptionsView">
  
	<StackPanel Margin="0,40,0,0">
		<Label HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"> Settings </Label>
		<Label Content="Steam Path: " Target="{ Binding ElementName=txtpath }" Margin="12,9,12,0"/>
		<DockPanel>
			<TextBox DockPanel.Dock="Left" x:Name="txtpath" Margin="12,0,12,12"/>
			<Button Command="{ Binding ChooseSteamFolder }" DockPanel.Dock="Right"> Choose Folder </Button>
		</DockPanel>
	</StackPanel>
	
	
</UserControl>
