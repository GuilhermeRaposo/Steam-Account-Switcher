<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
             x:Class="SteamAccountSwitcher.Views.AccountsView">
	<DockPanel>
		<ListBox Items="{ Binding Items }" SelectedItem="{ Binding SelectedAccount }">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock
						x:Name="{ Binding AccountName }"
						Text="{ Binding AccountName }"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Command="{ Binding OnClickCommand }" > Login </Button>
	</DockPanel>
</UserControl>